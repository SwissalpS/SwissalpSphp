Listen ##HTTPD_IP##:##HTTPD_PORT##
<VirtualHost ##HTTPD_IP##:##HTTPD_PORT##>
    ServerName ##HTTPD_NAME##
    DocumentRoot ##PATH_DIR_PHOCOA_APP##/wwwroot

    # map phocoa framework wwwroot - enabled PHOCOA Versioning
    AliasMatch ^/www/framework(/[0-9\.]*)?/?(.*) ##PATH_DIR_SRC_PHOCOA##/wwwroot/www/framework/$2
    # enable a normal wwwroot
    AliasMatch ^/www/?(.*) ##PATH_DIR_PHOCOA_APP##/wwwroot/www/$1

    # enable www access to skin assets
    # security thought... can people ../../.. their way to trouble? Apache 2 at least seems to prevent this, but I am not sure how.
    # skinTypeAssetsDir
    AliasMatch ^/skins/([^/]*)/www/(.*) ##PATH_DIR_PHOCOA_APP##/skins/$1/www/$2
    # skinSharedAssetsDir and skinThemeAssetsDir
    AliasMatch ^/skins/([^/]*)/([^/]*)/([^/]*)/(.*) ##PATH_DIR_PHOCOA_APP##/skins/$1/$2/www/$3/$4

    # show phpdoc documentation
    AliasMatch ^/docs/?(.*) ##PATH_DIR_SRC_PHOCOA##/docs/phpdocs/$1

    # allow / to run application - THIS ONE MUST BE LAST otherwise it will override the others!
    AliasMatch ^/?(.*) ##PATH_DIR_PHOCOA_APP##/wwwroot/index.php/$1

    # logging
    CustomLog ##PATH_DIR_PHOCOA_APP_CONTAINER##/log/access_log combined
    ErrorLog  ##PATH_DIR_PHOCOA_APP_CONTAINER##/log/error_log

    # various settings for this server
    # use client-side host names in redirects
    AcceptPathInfo On
    AllowEncodedSlashes On
    UseCanonicalName Off
    DirectoryIndex index.php index.html
    <Directory ##PATH_DIR_PHOCOA_APP##/wwwroot>
        # enable .htaccess stuff
        AllowOverride All
        Allow from All
    </Directory>
    <Directory ##PATH_DIR_PHOCOA_APP##/skins>
        Allow from All
    </Directory>

    # turn on Expires for static content
    # framework statics
    <Directory ##PATH_DIR_SRC_PHOCOA##/wwwroot/www/framework/*>
        Allow from All
        <IfModule mod_expires.c>
            ExpiresActive On
            ExpiresDefault "access plus 1 month"
        </IfModule>
    </Directory>

    # turn on GZIP
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/x-javascript
    DeflateCompressionLevel 9
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</VirtualHost>
